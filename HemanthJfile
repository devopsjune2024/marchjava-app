pipeline {
    agent any
    environment {
        PATH = "/opt/maven/bin:$PATH"
    }
    // tools {
    //     maven 'maven3.8'
    // }
    stages {
        stage('ABHI-Git-CLonce/Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/devopsjune2024/marchjava-app.git'
            }
        }
        stage('ABHI-Maven-Package') {
            steps {
                sh 'mvn package'
            }
        } 
        stage('ABHI-Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}

